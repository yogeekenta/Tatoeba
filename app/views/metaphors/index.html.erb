  <div class="contents row" >
    <% @metaphors.each do |metaphor| %>
      <div class="content_post" style="background-image: url(<%= metaphor.image %>);">
        <% if user_signed_in? && current_user.id == metaphor.user_id %>
        <div class="more">
          <span><%= image_tag 'arrow_top.png' %></span>
          <ul class="more_list">
            <li>
              <%= link_to '編集', "/situations/#{@situation.id}/metaphors/#{metaphor.id}/edit", method: :get %>
            </li>
            <li>
              <%= link_to '削除', "/situations/#{@situation.id}/metaphors/#{metaphor.id}", method: :delete %>
            </li>
          </ul>
        </div>
      <% end %>
        <%= simple_format(metaphor.text) %>
        <span class="name">
          <a href="">
            <span>投稿者</span><%= metaphor.user.nickname %>
          </a>
        </span>
      </div>
    <% end %>
    <%= paginate(@metaphors) %>
  </div>

